# style
theme = Gruvbox Dark 
window-padding-x = 8
window-padding-y = 4

# font
font-family = JetBrains Mono
font-size = 13

# cursor
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor

# behavior
mouse-hide-while-typing = true
unfocused-split-opacity = 0.7
copy-on-select = clipboard

# config
keybind = cmd+shift+r=reload_config
keybind = cmd+shift+,=open_config

# windows
keybind = cmd+n=new_window
keybind = cmd+t=new_tab
keybind = cmd+w=close_tab

# splits
keybind = cmd+shift+h=new_split:down
keybind = cmd+shift+v=new_split:right

keybind = cmd+h=goto_split:left
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up
keybind = cmd+l=goto_split:right

# tabs
keybind = cmd+s>1=goto_tab:1
keybind = cmd+s>2=goto_tab:2
keybind = cmd+s>3=goto_tab:3
keybind = cmd+s>4=goto_tab:4
keybind = cmd+s>5=goto_tab:5
keybind = cmd+s>6=goto_tab:6
keybind = cmd+s>7=goto_tab:7
keybind = cmd+s>8=goto_tab:8
keybind = cmd+s>9=goto_tab:9
